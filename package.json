{
  "name": "@memrearal/slider-captcha-react",
  "version": "1.0.3",
  "description": "User-friendly puzzle slider captcha for React",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "fix": "eslint --fix . --ext .ts,.tsx",
    "sass": "sass --no-source-map src",
    "scripts": "ts-node ./scripts/themes.ts",
    "prepack": "npm run build",
    "build": "npm run lint && npm run sass && npm run scripts && rollup --bundleConfigAsCjs -c",
    "watch": "rollup -cw"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/memrearal/slider-captcha-react.git"
  },
  "keywords": [
    "react",
    "captcha",
    "component",
    "slider",
    "puzzle",
    "slide"
  ],
  "author": "adrsch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/memrearal/slider-captcha-react/issues"
  },
  "homepage": "https://github.com/memrearal/slider-captcha-react#readme",
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "rollup": "^3.20.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "eslint": "8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "prop-types": "^15.8.1",
    "sass": "^1.62.0"
  },
  "directories": {
    "lib": "lib"
  }
}
